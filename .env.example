# ============================================
# Application Configuration
# ============================================
NODE_ENV=production
PORT=3001
DOMAIN=http://localhost:3000

# ============================================
# JWT Configuration
# ============================================
jwtkey=your_jwt_secret_key_here

# ============================================
# Database Configuration (PostgreSQL)
# ============================================
# PostgreSQL container configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_postgres_password_here
POSTGRES_DB=fullstack
POSTGRES_HOST_PORT=3336

# Database connection for application (when running in Docker, use service name)
DB_HOST=postgres
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=your_postgres_password_here
DB_DATABASE=fullstack

# Database port mapping (host:container)
PORT_DB=5432

# ============================================
# Redis Configuration
# ============================================
# When running in Docker, use service name 'redis' instead of 'localhost'
REDIS_URL=redis://redis:6379

# ============================================
# Elasticsearch Configuration
# ============================================
# When running in Docker, use service name 'elasticsearch' instead of 'localhost'
# For local development: http://localhost:9200
# For Docker: http://elasticsearch:9200
URL_ES_SEARCH=http://elasticsearch:9200

# ============================================
# Email Configuration (Gmail)
# ============================================
GMAIL_SEND=your_email@gmail.com
APP_PASSWORD_GMAIL_SEND=your_app_password_here

# ============================================
# Cloudinary Configuration
# ============================================
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret
